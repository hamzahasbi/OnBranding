{
  "name": "onbranding",
  "version": "1.0.0",
  "description": "On Branding project",
  "main": "index.js",
  "author": "Hamza Hasbi",
  "private": true,
  "scripts": {
    "api-dev": "yarn workspace backend develop",
    "api": "yarn workspace backend start",
    "front": "yarn workspace frontend start",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|css)\"",
    "format": "yarn prettier --write",
    "lint": "yarn workspaces run eslint",
    "build": "yarn workspaces run build",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|css)": [
      "eslint",
      "pretty-quick â€” staged"
    ]
  }
}
